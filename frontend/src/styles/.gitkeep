.navbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15px 20px;
  background: #1e1e2f;
  color: white;
}

.navLinks {
  list-style: none;
  display: flex;
  gap: 15px;
}

.navLinks li a {
  color: white;
  text-decoration: none;
  font-weight: bold;
}

@media (max-width: 768px) {
  .navLinks {
    display: none; /* Hide on mobile */
  }
}


.sidebar {
    width: 250px;
    height: 100vh;
    background: #2c2c3d;
    padding: 20px;
    color: white;
    position: fixed;
    top: 0;
    left: 0;
  }
  
  .sidebar ul {
    list-style: none;
    padding: 0;
  }
  
  .sidebar ul li a {
    color: white;
    display: block;
    padding: 10px;
    text-decoration: none;
  }
  
  @media (max-width: 768px) {
    .sidebar {
      width: 100%;
      height: auto;
      position: relative;
    }
  }
  